{
    "name": "@webcraft/github-actions-scripts",
    "description": "GitHub Actions scripts for the Webcraft project.",
    "version": "0.0.1",
    "license": "SEE LICENSE IN LICENSE.md",
    "private": true,
    "author": {
        "name": "G'lek Tarssza",
        "email": "glek@glektarssza.com",
        "url": "https://glektarssza.com"
    },
    "homepage": "https://glektarssza.github.io/webcraft-v2/",
    "bugs": {
        "url": "https://github.com/glektarssza/webcraft-v2/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/glektarssza/webcraft-v2.git",
        "directory": "./.github/scripts/"
    },
    "packageManager": "pnpm@10.18.1+sha512.77a884a165cbba2d8d1c19e3b4880eee6d2fcabd0d879121e282196b80042351d5eb3ca0935fa599da1dc51265cc68816ad2bddd2a2de5ea9fdf92adbec7cd34",
    "type": "module",
    "scripts": {
        "dev": "vite serve --mode development",
        "test": "echo 'No tests available!' && exit 0",
        "test:ci": "echo 'No tests available!' && exit 0",
        "test:ui": "echo 'No tests available!' && exit 0",
        "lint": "pnpm run eslint && pnpm run prettier",
        "lint:fix": "pnpm run eslint:fix && pnpm run prettier:fix",
        "lint:ci": "pnpm run eslint:ci && pnpm run prettier:ci",
        "eslint": "eslint --cache .",
        "eslint:fix": "eslint --cache --fix .",
        "eslint:ci": "eslint .",
        "prettier": "prettier --config ../../.prettierrc.cjs --ignore-path ../../.prettierignore --cache --check .",
        "prettier:fix": "prettier --config ../../.prettierrc.cjs --ignore-path ../../.prettierignore --cache --write .",
        "prettier:ci": "prettier --config ../../.prettierrc.cjs --ignore-path ../../.prettierignore --check .",
        "build": "pnpm run build:prod",
        "build:all": "pnpm run build:production && pnpm run build:development",
        "build:prod": "pnpm run build:production",
        "build:production": "tsc --build ./tsconfig.prod.json",
        "build:dev": "pnpm run build:development",
        "build:development": "tsc --build ./tsconfig.dev.json",
        "clean": "pnpm run clean:prod",
        "clean:all": "pnpm run clean:production && pnpm run clean:development",
        "clean:prod": "pnpm run clean:production",
        "clean:production": "del-cli \"./dist/prod/\"",
        "clean:dev": "pnpm run clean:dev",
        "clean:development": "del-cli \"./dist/dev/\"",
        "rebuild": "pnpm run rebuild:prod",
        "rebuild:all": "pnpm run clean:all && pnpm run build:all",
        "rebuild:prod": "pnpm run clean:prod && pnpm run build:prod",
        "rebuild:dev": "pnpm run clean:dev && pnpm run build:dev"
    },
    "devDependencies": {
        "@actions/core": "^1.11.1",
        "@actions/exec": "^1.1.1",
        "@actions/github": "^6.0.1",
        "@actions/glob": "^0.5.0",
        "@actions/io": "^1.1.3",
        "@eslint/js": "^9.37.0",
        "@octokit/rest": "^22.0.0",
        "@types/node": "^24.7.1",
        "@vitest/coverage-istanbul": "^3.2.4",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-tsdoc": "^0.4.0",
        "playwright": "^1.56.0",
        "prettier": "^3.6.2",
        "sass": "^1.93.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "8.46.0",
        "vitest": "^3.2.4"
    }
}
