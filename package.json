{
    "name": "@webcraft/root",
    "description": "A simple Minecraft clone written in TypeScript and built on web technologies.",
    "version": "0.0.1",
    "license": "SEE LICENSE IN LICENSE.md",
    "private": true,
    "author": {
        "name": "G'lek Tarssza",
        "email": "glek@glektarssza.com",
        "url": "https://glektarssza.com"
    },
    "homepage": "https://glektarssza.github.io/webcraft-v2/",
    "bugs": {
        "url": "https://github.com/glektarssza/webcraft-v2/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/glektarssza/webcraft-v2.git"
    },
    "packageManager": "pnpm@10.28.2",
    "type": "module",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "prepare": "./scripts/setup-pre-commit.sh",
        "dev": "pnpm -r --filter webcraft run dev",
        "test:base": "vitest",
        "test": "pnpm run test:base --run",
        "test:ci": "pnpm test --coverage.reporter=html --coverage.reporter=text",
        "test:ui": "pnpm run test:base --ui --coverage.reporter=html",
        "test:watch": "pnpm test:base --watch",
        "test:debug": "pnpm test:base --no-file-parallelism --inspectBrk",
        "lint": "pnpm -r run lint",
        "lint:fix": "pnpm -r run lint:fix",
        "lint:ci": "pnpm -r run lint:ci",
        "cspell": "pnpm -r run cspell",
        "cspell:ci": "pnpm -r run cspell:ci",
        "eslint": "pnpm -r run eslint",
        "eslint:fix": "pnpm -r run eslint:fix",
        "eslint:ci": "pnpm -r run eslint:ci",
        "prettier": "pnpm -r run prettier",
        "prettier:fix": "pnpm -r run prettier:fix",
        "prettier:ci": "pnpm -r run prettier:ci",
        "build": "pnpm run -r build",
        "build:packages": "pnpm run -r --filter './packages/*' build",
        "build:packages:prod": "pnpm run -r --filter './packages/*' build:prod",
        "build:packages:production": "pnpm run -r --filter './packages/*' build:production",
        "build:packages:dev": "pnpm run -r --filter './packages/*' build:dev",
        "build:packages:development": "pnpm run -r --filter './packages/*' build:development",
        "build:app": "pnpm run -r --filter './app' build",
        "build:app:prod": "pnpm run -r --filter './app' build:prod",
        "build:app:production": "pnpm run -r --filter './app' build:production",
        "build:app:dev": "pnpm run -r --filter './app' build:dev",
        "build:app:development": "pnpm run -r --filter './app' build:development",
        "build:all": "pnpm run -r build:all",
        "build:prod": "pnpm run -r build:prod",
        "build:production": "pnpm run -r build:production",
        "build:dev": "pnpm run -r build:dev",
        "build:development": "pnpm run -r build:development",
        "build:types": "pnpm run -r build:types",
        "clean": "pnpm run -r clean",
        "clean:all": "pnpm run -r clean:all",
        "clean:prod": "pnpm run -r clean:prod",
        "clean:production": "pnpm run -r clean:production",
        "clean:dev": "pnpm run -r clean:dev",
        "clean:development": "pnpm run -r clean:development",
        "clean:types": "pnpm run -r clean:types",
        "rebuild": "pnpm run -r rebuild",
        "rebuild:all": "pnpm run -r rebuild:all",
        "rebuild:prod": "pnpm run -r rebuild:prod",
        "rebuild:dev": "pnpm run -r rebuild:dev",
        "rebuild:types": "pnpm run rebuild:prod rebuild:types"
    },
    "devDependencies": {
        "@cspell/cspell-bundled-dicts": "^9.6.4",
        "@eslint/js": "^9.39.2",
        "@rollup/plugin-replace": "^6.0.3",
        "@types/node": "^25.2.1",
        "@vitest/browser-playwright": "^4.0.18",
        "@vitest/coverage-istanbul": "^4.0.18",
        "@vitest/eslint-plugin": "^1.6.6",
        "cspell": "^9.6.4",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-playwright": "^2.5.1",
        "eslint-plugin-tsdoc": "^0.5.0",
        "globals": "^17.3.0",
        "jiti": "^2.6.1",
        "playwright": "^1.58.1",
        "prettier": "^3.8.1",
        "sass-embedded": "^1.97.3",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "8.54.0",
        "vitest": "^4.0.18"
    }
}
