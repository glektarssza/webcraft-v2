{
    "name": "@webcraft/core",
    "description": "The core utility library for the Webcraft project.",
    "version": "0.0.0",
    "license": "SEE LICENSE IN LICENSE.md",
    "private": true,
    "author": {
        "name": "G'lek Tarssza",
        "email": "glek@glektarssza.com",
        "url": "https://glektarssza.com"
    },
    "homepage": "https://glektarssza.github.io/webcraft-v2/",
    "bugs": {
        "url": "https://github.com/glektarssza/webcraft-v2/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/glektarssza/webcraft-v2.git",
        "directory": "./packages/core/"
    },
    "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a",
    "type": "module",
    "main": "./dist/umd/index.js",
    "types": "./types/index.d.ts",
    "exports": {
        "node": null,
        "module-sync": null,
        "types": "./types/index.d.ts",
        "require": [
            {
                "development": "./dist/cjs/index.js",
                "dev": "./dist/cjs/index.js",
                "production": "./dist/cjs/index.js",
                "prod": "./dist/cjs/index.js",
                "default": "./dist/cjs/index.js"
            },
            "./dist/cjs/index.js"
        ],
        "import": [
            {
                "development": "./dist/es/index.js",
                "dev": "./dist/es/index.js",
                "production": "./dist/es/index.js",
                "prod": "./dist/es/index.js",
                "default": "./dist/es/index.js"
            },
            "./dist/es/index.js"
        ],
        "default": [
            {
                "development": "./dist/umd/index.js",
                "dev": "./dist/umd/index.js",
                "production": "./dist/umd/index.js",
                "prod": "./dist/umd/index.js",
                "default": "./dist/umd/index.js"
            },
            "./dist/umd/index.js"
        ]
    },
    "scripts": {
        "dev": "vite serve --mode development",
        "test": "vitest --run --coverage",
        "test:ci": "vitest --run --coverage",
        "test:ui": "vitest --ui",
        "lint": "pnpm run eslint && pnpm run prettier && pnpm run cspell",
        "lint:fix": "pnpm run eslint:fix && pnpm run prettier:fix",
        "lint:ci": "pnpm run eslint:ci && pnpm run prettier:ci && pnpm run cspell:ci",
        "cspell": "cspell lint --cache .",
        "cspell:ci": "cspell lint --no-cache .",
        "eslint": "eslint --cache ./src/ ./tests/",
        "eslint:fix": "eslint --cache --fix ./src/ ./tests/",
        "eslint:ci": "eslint ./src/ ./tests/",
        "prettier": "prettier --config ../../.prettierrc.cjs --ignore-path ../../.prettierignore --cache --check .",
        "prettier:fix": "prettier --config ../../.prettierrc.cjs --ignore-path ../../.prettierignore --cache --write .",
        "prettier:ci": "prettier --config ../../.prettierrc.cjs --ignore-path ../../.prettierignore --check .",
        "build": "pnpm run build:prod",
        "build:all": "pnpm run build:production && pnpm run build:development && pnpm run build:types",
        "build:prod": "pnpm run build:production",
        "build:production": "vite build --mode production",
        "build:dev": "pnpm run build:development",
        "build:development": "vite build --mode development",
        "build:types": "tsc -p ./src/ --declaration --emitDeclarationOnly --declarationDir ./types/",
        "clean": "pnpm run clean:prod",
        "clean:all": "pnpm run clean:production && pnpm run clean:development && pnpm run clean:types",
        "clean:prod": "pnpm run clean:production",
        "clean:production": "del-cli \"./dist/\"",
        "clean:dev": "pnpm run clean:development",
        "clean:development": "del-cli \"./dist/\"",
        "clean:types": "del-cli \"./types/\"",
        "rebuild": "pnpm run rebuild:prod",
        "rebuild:all": "pnpm run clean:all && pnpm run build:all",
        "rebuild:prod": "pnpm run clean:prod && pnpm run build:prod",
        "rebuild:production": "pnpm run clean:production && pnpm run build:production",
        "rebuild:dev": "pnpm run clean:dev && pnpm run build:dev",
        "rebuild:development": "pnpm run clean:development && pnpm run build:development",
        "rebuild:types": "pnpm run clean:types && pnpm run build:types"
    },
    "devDependencies": {
        "@cspell/dict-bash": "^4.2.2",
        "@cspell/dict-en-gb": "^5.0.19",
        "@cspell/dict-node": "^5.0.8",
        "@cspell/dict-python": "^4.2.23",
        "@cspell/dict-shell": "^1.1.2",
        "@cspell/dict-typescript": "^3.2.3",
        "@eslint/js": "^9.39.1",
        "@faker-js/faker": "^10.1.0",
        "@rollup/plugin-replace": "^6.0.3",
        "@types/node": "^24.10.1",
        "@vitest/browser": "^4.0.15",
        "@vitest/browser-playwright": "^4.0.15",
        "@vitest/coverage-istanbul": "^4.0.15",
        "@vitest/ui": "^4.0.15",
        "cspell": "^9.4.0",
        "del-cli": "^7.0.0",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-tsdoc": "^0.5.0",
        "playwright": "^1.57.0",
        "prettier": "^3.7.4",
        "sass": "^1.94.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "8.48.1",
        "vite": "^7.2.7",
        "vitest": "^4.0.15"
    }
}
